+            intentFilter.addAction(WfdSink.WFD_THIS_DEVICE_UPDATE_ACTION);
+	    registerReceiver(mWifiP2pReceiver, intentFilter);
+	    WifiManager manager = (WifiManager) getSystemService(WIFI_SERVICE);
+	    mWfdSink = new WfdSink(this);
