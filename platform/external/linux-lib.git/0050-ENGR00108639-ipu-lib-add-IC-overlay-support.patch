+SLRetCode FlipScreenLayerBuf(ScreenLayer *pSL, u8 nBufIdx)
+{
+	ScreenLayerPriv *pSLPriv = (ScreenLayerPriv *)pSL->pPriv;
+
+	if (nBufIdx >= pSLPriv->bufNum)
+		return E_RET_FLIP_ERR;
+
+	pSLPriv->curBufIdx = nBufIdx;
+
+	return E_RET_SUCCESS;
+}
