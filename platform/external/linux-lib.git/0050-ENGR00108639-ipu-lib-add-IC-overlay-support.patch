+	if (pSL->bufPaddr)
+		free(pSL->bufPaddr);
+	if (pSL->bufVaddr)
+		free(pSL->bufVaddr);
+	if (pSLPriv->bufMinfo)
+		free(pSLPriv->bufMinfo);
+done:
+	return ret;
+}
