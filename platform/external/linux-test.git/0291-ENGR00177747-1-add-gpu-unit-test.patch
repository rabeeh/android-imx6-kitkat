Subject: [PATCH 291/442]  ENGR00177747-1 add gpu unit test

Add Makefile for gpu test

Signed-off-by: Allen Xu <allen.xu@freescale.com>
---
 test/gpu/Makefile | 19 +++++++++++++++++++
 1 file changed, 19 insertions(+)
 create mode 100644 test/gpu/Makefile

diff --git a/test/gpu/Makefile b/test/gpu/Makefile
new file mode 100644
index 0000000..4a7ad57
--- /dev/null
+++ b/test/gpu/Makefile
@@ -0,0 +1,19 @@
+# list of platforms which want this test case
+INCLUDE_LIST:=IMX6Q
+
+ifeq ($(PLATFORM),$(findstring $(PLATFORM),$(INCLUDE_LIST)))
+OBJS = $(OBJDIR)/gpu.sh
+$(OBJS): $(SRCS)
+	mkdir -p $(OBJDIR)
+	cp gpu.sh $(OBJDIR)
+else
+OBJS =
+endif
+
+all: $(OBJS)
+
+.PHONY: clean
+clean:
+	rm -f $(OBJS)
+
+include ../make.rules
