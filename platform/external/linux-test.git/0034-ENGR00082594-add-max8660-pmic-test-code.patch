+
+char *jours[]= {"Sunday",
+                "monday",
+                "tuesday",
+                "Wednesday",
+                "Thursday",
+                "Friday",
+                "Saturday"};
+
+char *mois[]= {"January",
+               "February",
+               "March",
+               "April",
+               "May",
+               "June",
+               "July",
+               "August",
+               "September",
+               "October",
