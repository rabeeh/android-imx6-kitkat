+int dc_fb(void)
+{
+	int fd_fb;
+	struct fb_fix_screeninfo fb_fix;
+
+	fd_fb = open("/dev/fb0", O_RDWR, 0);
+	ioctl(fd_fb, FBIOGET_FSCREENINFO, &fb_fix);
+	if (strcmp(fb_fix.id, "DISP3 BG - DI1") == 0) {
+		close(fd_fb);
+		return 0;
+	}
+
+	fd_fb = open("/dev/fb1", O_RDWR, 0);
+	ioctl(fd_fb, FBIOGET_FSCREENINFO, &fb_fix);
+	if (strcmp(fb_fix.id, "DISP3 BG - DI1") == 0) {
+		close(fd_fb);
+		return 1;
+	}
+
+	return -1;
+}
