new file mode 100755
index 0000000..313ee21
--- /dev/null
+++ b/test/pm/suspend_random_auto.sh
@@ -0,0 +1,18 @@
+#!/bin/sh
+i=0;
+t=2;
+d=5;
+r=0;
+while [ "$i" -lt 20000 ];
+do
+	/unit_tests/rtcwakeup.out -d rtc0 -m mem -s $t;
+	sleep $d;
+	echo =============================
+	echo    suspend $i times;
+	echo =============================
+	i=`expr $i + 1`;
+	r=`date +%s`;
+	t=`expr $r % 10 + 2`;
+	d=`expr $r % 20 + 1`;
+	echo wakeup $t seconds, sleep $d seconds;
+done
