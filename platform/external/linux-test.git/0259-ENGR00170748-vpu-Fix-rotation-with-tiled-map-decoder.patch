+					pfbpool[i] = framebuf_alloc(dec->cmdl->format, dec->mjpg_fmt,
+							dec->stride, dec->picheight, 1);
+				else
+					pfbpool[i] = tiled_framebuf_alloc(dec->cmdl->format, dec->mjpg_fmt,
+						    dec->stride, dec->picheight, 1, dec->cmdl->mapType);
 				if (pfbpool[i] == NULL)
 					goto err1;
 			}
