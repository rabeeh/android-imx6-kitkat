 		if ((disp->buf.field == V4L2_FIELD_TOP) ||
@@ -864,18 +953,31 @@ int v4l_put_data(struct vpu_display *disp, int index, int field, int fps)
 	if (disp->buf.field == V4L2_FIELD_ANY || disp->buf.field == V4L2_FIELD_NONE)
 		threshold = 1;
