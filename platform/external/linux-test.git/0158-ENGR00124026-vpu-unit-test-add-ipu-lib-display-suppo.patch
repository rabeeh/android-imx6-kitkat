+void ipu_display_close(struct vpu_display *disp)
+{
+	int i;
+
+	disp->stopping = 1;
+	while(ipu_running && ((queue_size(&(disp->ipu_q)) > 0) || !ipu_waiting)) usleep(10000);
+	if (ipu_running) {
+		wakeup_queue();
+		info_msg("Join disp loop thread\n");
