+	       " -oh <capture output height>\n"
+	       " -hf <horizontal flip>\n"
+	       " -vf <vertical flip>\n"
+	       " -m <capture mode, 0-640x480, 1-320x240, etc>\n" \
+	       " -r <rotation 0, 90, 180, 270>\n"
+	       " -t <time> -fr <framerate>\n"
 #ifdef	GET_CONTI_PHY_MEM_VIA_PXP_LIB
