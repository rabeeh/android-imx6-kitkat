-	       "[-u if defined, means use userp, otherwise mmap]\n");
-#else
-	printf("CSI Video4Linux capture Device Test\n" \
-	       "Syntax: ./csi_v4l2_capture -t <time> -fr <framerate>\n");
+	       " [-u if defined, means use userp, otherwise mmap]\n"
 #endif
+		);
 }
 
