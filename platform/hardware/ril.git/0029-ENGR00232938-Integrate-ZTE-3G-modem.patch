+    ALOGD("[UEVENT] Sq: %u S: %s A: %d P: %s",
+	      event->seqnum, event->subsystem, event->action, event->path);
+    for (i = 0; i < UEVENT_PARAMS_MAX; i++) {
+	    if (!event->param[i])
+		    break;
+	    ALOGD("%s", event->param[i]);
+    }
+}
