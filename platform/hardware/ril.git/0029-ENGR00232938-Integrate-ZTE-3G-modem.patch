+		if (is_device_equal(device, idvendor, idproduct)) {
+			ALOGI("Runtime 3G port found matched device with "
+			     "Name:%s idVendor:%s idProduct:%s",
+			     device->name, device->idVendor, device->idProduct);
+
+			return device;
+		}
+	}
+
+	return NULL;
