+int AccelSensor::sensor_get_class_path(char *class_path)
+{
+	char dirname[] = ACC_SYSFS_PATH;
+	char buf[256];
+	int res;
+	DIR *dir;
+	struct dirent *de;
+	int fd = -1;
+	int found = 0;
+
+	dir = opendir(dirname);
+	if (dir == NULL)
+		return -1;
+
+	while((de = readdir(dir))) {
+		if (strncmp(de->d_name, "input", strlen("input")) != 0) {
+		    continue;
+        	}
+
+		sprintf(class_path, "%s/%s", dirname, de->d_name);
+		snprintf(buf, sizeof(buf), "%s/name", class_path);
+
+		fd = open(buf, O_RDONLY);
+		if (fd < 0) {
+		    continue;
+		}
+		if ((res = read(fd, buf, sizeof(buf))) < 0) {
+		    close(fd);
+		    continue;
+		}
+		buf[res - 1] = '\0';
+		if (strcmp(buf, ACC_DATA_NAME) == 0) {
+		    found = 1;
+		    close(fd);
+		    break;
+		}
+
+		close(fd);
+		fd = -1;
+	}
+	closedir(dir);
+	//ALOGE("the G sensor dir is %s",class_path);
+
+	if (found) {
+		return 0;
+	}else {
+		*class_path = '\0';
+		return -1;
+	}
