-        startThreshold = bufferSize - 1;
-        stopThreshold = bufferSize;
-    } else {
-        // For recording, configure ALSA to start the transfer on the
-        // first frame.
-        startThreshold = 1;
-        stopThreshold = bufferSize;
-    }
