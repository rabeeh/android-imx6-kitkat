+static int checkOutputDevice(struct hwc_context_t *ctx, char *puse, int usage, int *ufg)//return -1 indicate not exist.
+{
+	output_device *out;
+	int uFlag = 0;
+	int usg = 0;
+
+	for(int i = 0; i < MAX_OUTPUT_DISPLAY; i++) {
+		if(ctx->m_using[i]) {
+			out = ctx->m_out[i];
+			usg = out->getUsage();
+			if(usg & usage) {
+				uFlag |= (usg & usage);
+				if(puse) puse[i] = 1;
+			}
+		}
+	}
+	if(ufg != NULL)
+		*ufg = usage & ~uFlag;
+
+	return uFlag ^ usage;
+}
+
+static int findOutputDevice(struct hwc_context_t *ctx, int *index, int usage, int *ufg)
+{
+	output_device *out;
+	int uFlag = 0;
+	int usg = 0;
+
+	for(int i = 0; i < MAX_OUTPUT_DISPLAY; i++) {
+		if(ctx->m_using[i]) {
+			out = ctx->m_out[i];
+			usg = out->getUsage();
+			if(usg & usage) {
+				uFlag = (usg & usage);
+				*index = i;
+				break;
+			}
+		}
+	}
+	if(ufg != NULL)
+		*ufg |= uFlag;
+
+	return (*ufg) ^ usage;
+}
