+                    	}
+
+			if (ioctl(m->framebuffer->fd, FBIOGET_VSCREENINFO,
+				  &fb0_var) < 0) {
+                            LOGE("Error!Cannot get var info for fb0");
+			}
+
+			if (fb0_var.bits_per_pixel == 32) {
+				struct mxcfb_loc_alpha l_alpha;
+
+				l_alpha.enable = true;
+				l_alpha.alpha_in_pixel = true;
