+/** Close the copybit device */
+static int close_copybit(struct hw_device_t *dev) 
+{
+    struct copybit_context_t* ctx = (struct copybit_context_t*)dev;
+    if (ctx) {
+        C2D_STATUS c2dstatus;
+        if (ctx->c2dctx != NULL)
+        	c2dstatus = c2dDestroyContext(ctx->c2dctx);
+        free(ctx);
+    }
+    return 0;
+}
