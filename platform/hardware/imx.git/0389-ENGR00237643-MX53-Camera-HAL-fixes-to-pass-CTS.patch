+        CAMERA_LOG_RUNTIME("uvc driver buffers[%d].virt_start = 0x%x\n", i, (unsigned int)(mUvcBuffers[i].virt_start));
+    }
+
+    return CAPTURE_DEVICE_ERR_NONE;
