+    }
+    else if(format == HAL_PIXEL_FORMAT_YCbCr_420_SP) {
+        pformat = "yuv420sp";
+    }
+    else if(format == HAL_PIXEL_FORMAT_YCbCr_422_I) {
+        pformat = "yuv422i-yuyv";
+    }
+    else {
+        FLOGE("format %d is not supported", format);
+        return BAD_VALUE;
+    }
+
