+            /* Flush the buffer*/
+            g_JpegDataLen += *out_buf_len_ptr;
+            CAMERA_HAL_LOG_RUNTIME("jpeg output data len %d",(int)g_JpegDataLen);
+
+            *out_buf_ptrptr = NULL;
+            *out_buf_len_ptr = NULL;
