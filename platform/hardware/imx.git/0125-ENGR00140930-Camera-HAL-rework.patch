+        g_JpegDataLen = 0;//Valid data len of g_JpegData
+        g_JpegData = NULL;//Buffer to hold jpeg data
+        size = width * height * 3 / 2;
+
+        g_JpegData = outBuf->virt_start;
+        g_JpegDataSize = size;
+        if(!g_JpegData)
+        {
+            return JPEG_ENC_ERROR_BAD_PARAM;
+        }
+
+        /* --------------------------------------------
+         * Allocate memory for Encoder Object
