+static int athr_run_hook(char* name)
+{
+    char   prop[PROPERTY_VALUE_MAX];
+    char   buf[PROPERTY_VALUE_MAX + 20];
+    if (property_get("athr.gps.hookspath",prop,"") == 0)
+	{
